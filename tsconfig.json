{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2020",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "declaration": true,
        "outDir": "./module"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*"]
}
